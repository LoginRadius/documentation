openapi: 3.1.0
info:
  title: LoginRadius Identity API
  description: API for querying LoginRadius Cloud Directory
  version: 1.0.0

servers:
  - url: https://cloud-api.loginradius.com
    description: LoginRadius Cloud API

paths:
  /identity:
    post:
      summary: Get User Identity
      description: This API allows you to query your LoginRadius Cloud Directory.
      security:
        - ApiKeyAuth: []
        - ApiSecretAuth: []
      parameters:
        - in: query
          name: apikey
          required: true
          schema:
            type: string
          description: LoginRadius API Key
        - in: query
          name: apisecret
          required: true
          schema:
            type: string
          description: LoginRadius API secret or LoginRadius API Secondary secret with Cloud Directory API permission enabled
      requestBody:
        required: true
        content:
          application/json:
            schema:
              type: object
              required:
                - from
                - to
                - q
              properties:
                from:
                  type: string
                  format: date
                  description: The start date for the records you would like to retrieve (yyyy-mm-dd)
                  example: "2023-01-01"
                to:
                  type: string
                  format: date
                  description: The end date for the records you would like to retrieve (yyyy-mm-dd)
                  example: "2023-12-31"
                q:
                  type: object
                  description: The query that you would like to pull data on
                size:
                  type: integer
                  minimum: 1
                  maximum: 1000
                  default: 20
                  description: The number of records to be fetched per request
      responses:
        '200':
          description: Successful response
          headers:
            Access-Control-Allow-Origin:
              schema:
                type: string
              description: CORS header - allowed origins
            Access-Control-Allow-Methods:
              schema:
                type: string
              description: CORS header - allowed HTTP methods
              example: "POST, OPTIONS"
            Access-Control-Allow-Headers:
              schema:
                type: string
              description: CORS header - allowed request headers
              example: "Content-Type, Authorization"
          content:
            application/json:
              schema:
                type: object
                properties:
                  total:
                    type: integer
                    description: Total number of records
                  data:
                    type: array
                    items:
                      $ref: '#/components/schemas/UserProfile'
                  next:
                    type: string
                    description: Pagination token for the next page
    options:
      summary: CORS preflight
      description: Handle CORS preflight requests
      responses:
        '204':
          description: CORS preflight response
          headers:
            Access-Control-Allow-Origin:
              schema:
                type: string
              description: CORS header - allowed origins
            Access-Control-Allow-Methods:
              schema:
                type: string
              description: CORS header - allowed HTTP methods
              example: "POST, OPTIONS"
            Access-Control-Allow-Headers:
              schema:
                type: string
              description: CORS header - allowed request headers
              example: "Content-Type, Authorization"

components:
  securitySchemes:
    ApiKeyAuth:
      type: apiKey
      in: query
      name: apikey
    ApiSecretAuth:
      type: apiKey
      in: query
      name: apisecret

  schemas:
    UserProfile:
      type: object
      properties:
        About:
          type: string
          nullable: true
        Addresses:
          type: array
          items:
            type: object
          nullable: true
        Age:
          type: integer
          nullable: true
        AppName:
          type: string
        BirthDate:
          type: string
          format: date
        Email:
          type: array
          items:
            type: object
            properties:
              Type:
                type: string
              Value:
                type: string
                format: email
        EmailVerified:
          type: boolean
        FirstName:
          type: string
        LastName:
          type: string
        FullName:
          type: string
        Gender:
          type: string
        ID:
          type: string
        IsActive:
          type: boolean
        PhoneNumbers:
          type: array
          items:
            type: object
            properties:
              PhoneNumber:
                type: string
              PhoneType:
                type: string
        SignupDate:
          type: string
          format: date-time
        SignupLog:
          type: object
          properties:
            Host:
              type: string
            IP:
              type: string
            UserAgent:
              type: string
        user_agent:
          type: object
          properties:
            device:
              type: object
              properties:
                name:
                  type: string
            name:
              type: string
            original:
              type: string
            os:
              type: object
              properties:
                full:
                  type: string
                name:
                  type: string
                version:
                  type: string
            version:
              type: string